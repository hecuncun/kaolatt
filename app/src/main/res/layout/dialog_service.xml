<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_white_round"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/bg_blue_btn"
            android:layout_height="44dp">
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:text="1234567"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_toLeftOf="@id/tv_phone"
                android:src="@mipmap/icon_dianhua"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/bg_blue_btn"
            android:layout_height="44dp">
            <TextView
                android:id="@+id/tv_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:text="1234567"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_toLeftOf="@id/tv_qq"
                android:src="@mipmap/icon_qq"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/bg_blue_btn"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/bg_blue_btn"
                android:layout_height="44dp">
                <TextView
                    android:id="@+id/tv_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:textSize="16sp"
                    android:text="微信客服"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_toLeftOf="@id/tv_wx"
                    android:src="@mipmap/icon_weixin"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/iv_wx"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_gravity="center"
                android:layout_width="132dp"
                android:layout_height="132dp"
                android:src="@mipmap/pic_good"/>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>