<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/bg_white_round"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="请选择支付方式"
            android:textColor="@color/text_color_666666"
            android:textSize="@dimen/text_size_normal"/>

        <View
            style="@style/horizontalGrayLine"/>


        <LinearLayout
            android:id="@+id/ll_check_zfb"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/icon_pay_zhifubao"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_weight="1"
                android:text="支付宝"
                android:textColor="@color/text_color_gray"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/iv_check_zfb"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginRight="22dp"
                android:src="@mipmap/icon_choose_pre"/>
        </LinearLayout>

        <View
            style="@style/horizontalGrayLine"/>

        <LinearLayout
            android:id="@+id/ll_check_wechat"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/icon_pay_weixin"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_weight="1"
                android:text="微信支付"
                android:textColor="@color/text_color_gray"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/iv_check_wechat"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginRight="22dp"
                android:src="@mipmap/icon_choose"/>
        </LinearLayout>
        
        <TextView
            android:id="@+id/tv_pay_money"
            android:layout_marginTop="@dimen/dp_30"
            android:padding="@dimen/dp_10"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="待支付金额：¥586"/>
        <TextView
            android:id="@+id/tv_pay"
            android:layout_marginTop="23dp"
            android:text="确认支付"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_blue_btn"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="44dp"/>

    </LinearLayout>
</LinearLayout>