<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="214dp"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_head_photo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/pic_head"/>

            <TextView
                android:id="@+id/tv_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="未登录"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_big"/>

            <TextView
                android:id="@+id/tv_user_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="ID:"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="142dp"
            android:background="@drawable/bg_white_round"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_17"
                    android:text="我的订单"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/text_size_normal"/>

                <TextView
                    android:id="@+id/tv_order_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableRight="@mipmap/right_arrow"
                    android:paddingRight="@dimen/dp_17"
                    android:text="查看全部"/>
            </LinearLayout>

            <View
                style="@style/horizontalGrayLine"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_wait_pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableTop="@mipmap/icon_pay"
                        android:gravity="center"
                        android:text="待付款"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/text_size_normal"/>

                    <TextView
                        android:id="@+id/tv_wait_pay_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/bg_red_circle"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_smaller"
                        android:visibility="gone"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_wait_receive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableTop="@mipmap/icon_deliver"
                        android:gravity="center"
                        android:text="待收货"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/text_size_normal"/>

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/bg_red_circle"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_smaller"
                        android:visibility="gone"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_wait_evaluate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableTop="@mipmap/icon_evaluate"
                        android:gravity="center"
                        android:text="待评价"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/text_size_normal"/>

                    <TextView
                        android:id="@+id/tv_wait_evaluate_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/bg_red_circle"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_smaller"
                        android:visibility="gone"/>
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_complete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp_12"
                    android:drawableTop="@mipmap/icon_send"
                    android:gravity="center"
                    android:text="已完成"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/text_size_normal"/>

                <TextView
                    android:id="@+id/tv_reject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp_12"
                    android:drawableTop="@mipmap/icon_refund"
                    android:gravity="center"
                    android:text="退换货"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/text_size_normal"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="297dp"
            android:background="@drawable/bg_white_round"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_menu01"
                    android:drawablePadding="@dimen/dp_6"
                    android:padding="@dimen/dp_16"
                    android:text="我的收藏"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/text_size_normal"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@mipmap/right_arrow"/>
            </RelativeLayout>

            <View style="@style/horizontalGrayLine"/>

            <RelativeLayout
                android:id="@+id/rl_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_menu02"
                    android:drawablePadding="@dimen/dp_6"
                    android:padding="@dimen/dp_16"
                    android:text="优惠券"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/text_size_normal"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@mipmap/right_arrow"/>
            </RelativeLayout>

            <View style="@style/horizontalGrayLine"/>

            <RelativeLayout
                android:id="@+id/rl_my_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_menu03"
                    android:drawablePadding="@dimen/dp_6"
                    android:padding="@dimen/dp_16"
                    android:text="我的积分"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/text_size_normal"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@mipmap/right_arrow"/>
            </RelativeLayout>

            <View style="@style/horizontalGrayLine"/>

            <RelativeLayout
                android:id="@+id/rl_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_menu04"
                    android:drawablePadding="@dimen/dp_6"
                    android:padding="@dimen/dp_16"
                    android:text="设置"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/text_size_normal"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@mipmap/right_arrow"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>